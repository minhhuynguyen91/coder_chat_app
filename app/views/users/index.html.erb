<div class="row">
  <div class="col-4">
    <ul class="list-group">
      <li class="list-group-item active"> <%= link_to 'Users', users_path, {:style => 'color:black;'} %> </li>
      <li class="list-group-item"> <%= link_to 'Friends', '#', {:style => 'color:black;'} %> </li>
      <li class="list-group-item"> <%= link_to 'Followers', '#', {:style => 'color:black;'} %> </li>
    </ul>
  </div>
  
  <div class="col-8">
    <h2> Users </h2>

    <div class="card-columns" style="font-size: 0.8em; text-align: center">
    <% @users.each do |user| %>
      <div class="card">  
        <%= image_tag("http://placehold.it/128?text=?", alt: "text", :class => "card-img-top")%>     
        <div class="card-block">
          <div style="word-break: break-word"> <%= user.email %>  </div>
          <%= link_to 'Go somewhere', '#', class: 'btn btn-primary'  %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
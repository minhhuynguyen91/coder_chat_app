<div class="col-4">
  <p> 
    <%= link_to 'New messages', new_message_path, class: 'btn btn-secondary'%> 
    <%= link_to 'New group message', new_group_messages_path, class: 'btn btn-secondary'%> 
  </p>
  <ul class="list-group">

    <% if list_style == "Incoming" %>
    <li class="list-group-item active"> <%= link_to 'Inbox', incoming_messages_path, {:style => 'color:black;'} %> </li>
    <li class="list-group-item"> <%= link_to 'Sent', sent_messages_path, {:style => 'color:black;'} %> </li>

    <% elsif list_style == "Sent" %>
      <li class="list-group-item"> <%= link_to 'Inbox', incoming_messages_path, {:style => 'color:black;'} %> </li>
      <li class="list-group-item active"> <%= link_to 'Sent', sent_messages_path, {:style => 'color:black;'} %> </li>
    <% end %>
  </ul>
</div>
<br>
<% if flash[:error] %>

  <div class="alert alert-danger" role="alert">
    <% flash[:error].each do |error_type| %>
      <ul>
        <li> <%= error_type %> </li>
      </ul>
    <% end %>
  </div>

<% elsif flash[:success] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:success] %>
  </div>
<% end %>

<% if current_user %>
  <div class="alert alert-info" role="alert">
    Welcome <%= current_user.username %>
  </div>
<% end %>
<br>
<% if flash[:error] %>

  <div class="alert alert-danger" role="alert">
    <ul>
    <% flash[:error].each do |error_type| %>
      <li> <%= error_type %> </li>
    <% end %>
    </ul>
  </div>

<% elsif flash[:success] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:success] %>
  </div>
<% end %>

